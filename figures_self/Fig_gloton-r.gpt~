"< cat ".ROOT."LF100/NF6400/LC*/g*.txt|sort -k 15 -g|awk '{if ($12>0) print $0}'" u (1-$15):20:(10000) smooth acsplines lt 9 not,\
"< cat ".ROOT."LF100/NF100/LC*/a*.txt" u (1-$13):16:14 w xerror lt 3 pt 7 not,\
